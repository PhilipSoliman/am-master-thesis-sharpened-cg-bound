{
    "settings": {
        "actionButtons": {
            "commands": [
                {
                    "name": "Render Manim (Interactive)",
                    "color": "purple",
                    "command": "${workspaceFolder}/.venv/Scripts/python.exe -m manim -qm -p --renderer=opengl --fullscreen ${file}",
                    "singleInstance": true,
                    "cwd": "${workspaceFolder}/defense/manimations"
                },
                {
                    "name": "Present Manim (Slides)",
                    "color": "blue",
                    "command": "workbench.action.tasks.runTask",
                    "args": [
                        "Present Manim Slides"
                    ],
                    "singleInstance": true,
                    "cwd": "${workspaceFolder}/defense/manimations",
                    "useVsCodeApi": true
                }
            ]
        },
        "manim-sideview.commandLineArgs": "--renderer=opengl --write_to_movie --quality=p --use_projection_fill_shaders --use_projection_stroke_shaders",
        "manim-sideview.runOnSave": false,
        "latex-workshop.intellisense.citation.backend": "biblatex",
        "latex-workshop.kpsewhich.enabled": false,
        "latex-workshop.latex.recipes": [
            {
                "name": "lualatexmk -> biber -> lualatexmk * 2",
                "tools": [
                    "lualatexmk",
                    "biber",
                    "lualatexmk",
                    "lualatexmk"
                ]
            }
        ],
        "latex-workshop.latex.tools": [
            {
                "name": "lualatexmk",
                "command": "latexmk",
                "args": [
                    "-synctex=1",
                    "-cd",
                    "-interaction=nonstopmode",
                    "-file-line-error",
                    "-lualatex",
                    "-outdir=%OUTDIR%",
                    "%DOC%"
                ],
                "env": {}
            },
            {
                "name": "biber",
                "command": "biber",
                "args": [
                    "--input-directory=%OUTDIR%",
                    "--output-directory=%OUTDIR%",
                    "%DOCFILE%"
                ],
                "env": {}
            }
        ],
        "latex-workshop.latex.outDir": "%DIR%/build",
        "latex-workshop.formatting.latex": "latexindent",
        "[latex]": {
            "editor.wordWrap": "bounded",
            "editor.wordWrapColumn": 150,
            "editor.formatOnSave": true,
            "editor.defaultFormatter": "James-Yu.latex-workshop"
        }
    },
    "tasks": {
        "version": "2.0.0",
        "tasks": [
            {
                "label": "Render Manim Slides",
                "type": "shell",
                "command": "${workspaceFolder}\\.venv\\Scripts\\manim-slides",
                "problemMatcher": [],
                "options": {
                    "cwd": "${workspaceFolder}\\${relativeFileDirname}"
                },
                "args": [
                    "render",
                    "--GL",
                    "${file}",
                    "${fileBasenameNoExtension}"
                ]
            },
            {
                "label": "Convert Manim Slides",
                "type": "shell",
                "command": "${workspaceFolder}\\.venv\\Scripts\\manim-slides",
                "options": {
                    "cwd": "${workspaceFolder}\\${relativeFileDirname}"
                },
                "args": [
                    "convert",
                    "--one-file",
                    "--to=html",
                    "--open",
                    "-cassets_dir=${workspaceFolder}\\defense\\manimations\\assets",
                    "${fileBasenameNoExtension}",
                    "presentations\\${fileBasenameNoExtension}.html"
                ],
                "problemMatcher": []
            },
            {
                "label": "Present Manim Slides",
                "dependsOn": [
                    "Render Manim Slides",
                    "Convert Manim Slides"
                ],
                "dependsOrder": "sequence"
            }
        ]
    },
    "extensions": {
        "recommendations": [
            "James-Yu.latex-workshop",
            "rickaym.manim-sideview"
        ]
    }
}